{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-skills"],
  "agent": {
    "openspec-supervisor": {
      "permission": {
        "skill": {
          "openspec-unblock-research": "allow"
        },
        "tool": {
          "write": {
            "allow": ["openspec/**/*", "auto_test_openspec/**/*", "git_openspec_history/**/*"],
            "deny": ["**/*.py", "**/*.js", "**/*.ts"]
          }
        }
      }
    },
    "openspec-worker": {
      "permission": {
        "skill": {
          "openspec-change-interviewer": "allow",
          "openspec-feature-list": "allow"
        },
        "tool": {
          "write": {
            "deny": ["openspec/**/feature_list.json", ".git/**/*"]
          },
          "bash": {
            "deny": ["git commit", "git push", "git add"]
          }
        }
      }
    }
  }
}